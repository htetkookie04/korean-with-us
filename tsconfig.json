{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts", 
    "src/app/**/*", 
    "src/components/layout/**/*", 
    "src/components/sections/**/*", 
    "src/components/ui/**/*", 
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules", 
    "src/App.tsx", 
    "src/main.tsx", 
    "src/pages/**", 
    "src/components/auth/**", 
    "src/components/ScrollToTop.tsx", 
    "src/utils/**", 
    "src/data/**", 
    "src/index.css",
    "**/pages/**",
    "**/App.tsx",
    "**/main.tsx"
  ]
}
